{
  "routes": [
    { "route": "/releases/next/*", "headers": { "Cache-Control": "no-cache, no-store" } },

    { "route": "/*.html", "headers": { "Cache-Control": "public, max-age=10800, must-revalidate" } },

    { "route": "/assets/js/*", "headers": { "Cache-Control": "public, max-age=86400, must-revalidate" } },
    { "route": "/assets/css/*", "headers": { "Cache-Control": "public, max-age=86400, must-revalidate" } },
    { "route": "/assets/lib/*", "headers": { "Cache-Control": "public, max-age=86400, must-revalidate" } },
    { "route": "/assets/icons/*", "headers": { "Cache-Control": "public, max-age=604800, must-revalidate" } },
    { "route": "/assets/*", "headers": { "Cache-Control": "public, max-age=86400, must-revalidate" } },

    { "route": "/*", "headers": { "Cache-Control": "public, max-age=1800, must-revalidate" } }
  ]
}
